{
  "name": "taskflow-pro",
  "version": "1.0.0",
  "description": "Task Management System",
  "main": "server/index.js",
  "scripts": {
    "start": "concurrently \"json-server --watch server/db.json --port 3001 --routes server/routes.json\" \"live-server public --port=3000 --no-browser\"",
